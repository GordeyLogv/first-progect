<h1>Add article</h1>

<form action="/add-article" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Title</label>
        <span class="helper-text" data-error="write title article"></span>
    </div>
    <div class="input-field">
        <input id="time" name="time" type="text" class="validate" required>
        <label for="time">Time</label>
        <span class="helper-text" data-error="write time to add article"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">URL image</label>
        <span class="helper-text" data-error="write URL to article"></span>
    </div>
    <div class="input-field">
        <input id="text" name="text" type="text" class="validate" required>
        <label for="text">Text</label>
        <span class="helper-text" data-error="write text article"></span>
    </div>

    <button class="btn btn-primary">Add article</button>

</form>