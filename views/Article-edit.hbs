<h1>Редактировать: {{article.title}}</h1>

<form action="/article/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{article.title}}">
        <label for="title">Title</label>
        <span class="helper-text" data-error="write title article"></span>
    </div>
    <div class="input-field">
        <input id="time" name="time" type="text" class="validate" required value="{{article.time}}">
        <label for="time">Time</label>
        <span class="helper-text" data-error="write time to add article"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{article.img}}">
        <label for="img">URL image</label>
        <span class="helper-text" data-error="write URL to article"></span>
    </div>
    <div class="input-field">
        <input id="text" name="text" type="text" class="validate" required value="{{article.text}}">
        <label for="text">Text</label>
        <span class="helper-text" data-error="write text article"></span>
    </div>

    <input type="hidden" name="id" value="{{article.id}}">

    <button class="btn btn-primary">Редактировать курс</button>

</form>